<UserControl x:Class="ImageSlicer.UCLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageSlicer"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="640">
    <Grid>
        <Thumb x:Name="thumb" DragDelta="thumb_DragDelta" OpacityMask="Transparent" Cursor="Hand"/>
        <Grid Background="Red" Height="1"/>
    </Grid>
</UserControl>
